    <script>
        function SignIn() {
            var UserAccount = {}
            UserAccount.Email = $("#loginName").val();
            UserAccount.Password = $("#loginPassword").val();
            alert(UserAccount.Email);
            $.ajax({
                type: 'POST',
                url: "https://localhost:44344/api/Login/SignIn",
                data: JSON.stringify(UserAccount),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    var check = data + "";
                    alert(data);
                    alert(check);
                    if (check == "true") {
                        localStorage.setItem("loginEmail", UserAccount.Email);
                        alert("Here we got: "+localStorage.getItem("loginEmail"));
                      document.location.href = '/HomePage/Home';
                    }
                    else {
                        alert("get the else");
                    }
                  
                },
                error: function (data) {
                    alert("error case : " + data)
                }
            });

        }


        var SendEmail = function () {

            var Account = {}
            Account.Email = $("#registerEmail").val();
            Account.Name = $("#registerName").val();
            Account.Password = $("#registerPassword").val();
            Account.Username = $("#registerUsername").val();
            //  Temp storing in local storage
            localStorage.setItem("registerEmail", Account.Email);
            localStorage.setItem("registerName", Account.Name);
            localStorage.setItem("registerPassword", Account.Password);
            localStorage.setItem("registerUsername", Account.Username);

                /*   public string Name { get; set; }
        public string Username { get; set; }
        public string Password { get; set; }
        public string Email { get; set; }*/


            
            $.ajax({
                
                type: 'POST',
                data: JSON.stringify(Account),
                url: "https://localhost:44344/LoginView/SendMailToUser",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    localStorage.setItem("VerificationCode", data);
                    alert(localStorage.getItem("VerificationCode"));
                    document.location.href = "https://localhost:44344/LoginView/RegisterationVerificationView";
                },
